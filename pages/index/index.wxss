/**index.wxss**/
.nav{
  display: flex;
  bottom: 0;
  position: absolute;
  margin-bottom: 50rpx;
  justify-content: space-around;
  color: gray;
  border-top: 1rpx solid gray;
  width: 100%;
  padding: 15rpx 0 0;

}

.nav-item{
  padding: 0 50rpx;
}

.nav-active{
  color: black;
  border-bottom: 4rpx solid black;
}

.content{
  width: calc(100% - 60rpx);
}

.cott-add{
  padding: 10rpx 0;
  border-bottom: 1rpx solid gray;
  text-align: center;
  position: relative;
}

.cott-item{
  position: relative;
  text-align: left;
}

.cott-checkbox{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.ctot-right{
  display: inline-block;
  width: calc(100% - 60rpx);
  margin-left: 60rpx;
}

.leave{
  font-size: 22rpx;
  padding: 5rpx;
  border: 1rpx solid gray;
  margin-right: 30rpx;

}